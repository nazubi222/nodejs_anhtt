<div class="container mt-24">
  <div class="row mt-8">
    {{#each blogs}}
      <div class="col-sm-6 col-lg-4">
        <div class="card">
          <img class="card-img-top" src="{{this.image}}" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/blogs/{{this._id}}" class="btn btn-primary">View Detail</a>
          </div>
        </div>
      </div>
    {{else}}
      <h3 colh3="5" class="text-center">List blogs is empty!
        <a href="/blogs/create">Create new blog</a></h3>
    {{/each}}
  </div>
</div>